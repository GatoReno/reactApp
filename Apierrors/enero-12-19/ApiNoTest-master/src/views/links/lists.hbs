<div class="row">
    {{#each links}}
    <div class="col-12 col-sm-6  col-md-4 col-lg-3">
        <div class="card text-center">
            <a href="">
                <a href="{{url}}" target=".blanck">
                    <h3 class="card-title text-uppercase">
                        {{title}}
                    </h3>
                </a>
            </a>
            <div class="card-body ">
                <div>
                    {{description}}
                </div>
                <div>
                    {{url}}
                </div>



            </div>
            <div class="card-footer">
                <div>
                    <br>
                    <a href="/links/delete/{{id}}" class="btn btn-default btn-sm">Delete</a>
                    <a href="/links/update/{{id}}" class="btn btn-default btn-sm">Update</a>

                </div>
                <div>
                    <br>
                    creado el día: {{timeago created_at}}
                </div>
            </div>
        </div>
    </div>
    {{else}}
    <div class="col-12 ">
        <div class="card text-center">
            <div class="card-body">
                <p>No hay proyectos</p>
                <a href="/links/add" class="btn btn-default">Añadir proyecto</a>
            </div>
        </div>
    </div>

    {{/each}}
</div>